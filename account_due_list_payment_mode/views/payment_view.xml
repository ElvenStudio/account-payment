<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_payments_mode_tree" model="ir.ui.view">
            <field name="name">Payments Mode</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account_due_list.view_payments_tree"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" readonly="1" position="before">
                    <field name="payment_mode_id" readonly="1"/>
                </field>
            </field>
        </record>
        
        <record id="account_due_list_payment_mode_account_move_line_form_view" model="ir.ui.view">
            <field name="name">account.due.list.payment.mode.account.move.line.form.view</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account_due_list.account_due_list_account_move_line_form_view"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="before">
                    <field name="payment_mode_id" />
                </field>
            </field>
        </record>

        <record id="view_payments_mode_filter" model="ir.ui.view">
            <field name="name">Payments Mode Select</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account_due_list.view_payments_filter"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="before">
                    <field name="payment_mode_id"/>
                </field>
                <filter string="Payment term" position="before">
                    <filter string="Payment Mode" icon="terp-sale" domain="[]" context="{'group_by':'payment_mode_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
