<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_payment_order_form" model="ir.ui.view">
            <field name="name">payment.order.form</field>
            <field name="model">payment.order</field>
            <field name="inherit_id" ref="account_payment.view_payment_order_form" />
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                    <field name="voucher_ids" invisible="True" />
                    <field name="has_payment_lines_to_pay" invisible="True" />
                    <field name="has_vouchers" invisible="True" />
                </field>

                <div class=" oe_right oe_button_box" position="after">
                    <div class=" oe_right oe_button_box">
                        <button name="show_vouchers"
                                string="Show vouchers"
                                type="object"
                                class="oe_inline oe_stat_button oe_right"
                                attrs="{'invisible':['|',('state','!=','done'),('has_vouchers','=',False)]}"
                                icon="fa-bars"
                                widget="statinfo" />
                        <button name="generate_vouchers"
                                string="Create vouchers"
                                type="object"
                                class="oe_inline oe_stat_button oe_right"
                                attrs="{'invisible':['|',('state','!=','done'),('has_payment_lines_to_pay','=',False)]}"
                                icon="fa-pencil-square-o"
                                widget="statinfo" />
                    </div>
                </div>
            </field>
        </record>

    </data>
</openerp>
